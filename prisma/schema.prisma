datasource db {
  provider = "postgresql"
  schemas  = ["StockMind"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  tags      Tag[]

  @@schema("StockMind")
}

model Tag {
  id               String            @id @default(uuid())
  name             String
  type             String            // "COMPANY" or "INDUSTRY"
  userId           String
  user             User              @relation(fields: [userId], references: [id])
  catalysts        Catalyst[]
  reports          DailyReport[]
  overallAnalyses  OverallAnalysis[]
  assessments      TagAssessment[]

  @@schema("StockMind")
}

model Catalyst {
  id        String   @id @default(uuid())
  content   String
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@schema("StockMind")
}

model DailyReport {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  content   String
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@schema("StockMind")
}

model OverallAnalysis {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  content   String
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])


  @@schema("StockMind")
}

model TagAssessment {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])
  points    String[] // List of key points
  sentiment String   // "POSITIVE", "NEGATIVE", "NEUTRAL"
  summary   String?  // Short summary
  
  @@schema("StockMind")
}
