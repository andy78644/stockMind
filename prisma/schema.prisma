datasource db {
  provider = "postgresql"
  schemas  = ["StockMind"]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  tags      Tag[]

  @@schema("StockMind")
}

model Tag {
  id        String     @id @default(uuid())
  name      String
  type      String     // "COMPANY" or "INDUSTRY"
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  catalysts Catalyst[]
  reports   DailyReport[]

  @@schema("StockMind")
}

model Catalyst {
  id        String   @id @default(uuid())
  content   String
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@schema("StockMind")
}

model DailyReport {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  content   String
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id])

  @@schema("StockMind")
}
